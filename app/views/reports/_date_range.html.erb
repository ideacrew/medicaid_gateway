<div class="mt-2 mb-3" data-controller="report">
    <label for="start_on">Start On:</label>
    <input type="date" id="start_on" name="start_on" value="<%= start_on %>" data-report-target="startDate">
    <label for="end_on" class="ms-2">End On:</label>
    <input type="date" id="end_on" name="end_on" value="<%= end_on %>" data-report-target="endDate">
    <button class="btn btn-primary" data-action="report#change_dates" data-session="<%= session_name %>">
        Change Dates
    </button>
    <p class="ms-1"><%= "as of #{Time.current.to_formatted_s(:time)} UTC" if end_on.today? %></p>
</div>