<h1>Account Transfers To <%= MedicaidGatewayRegistry[:transfer_service].item.upcase %></h1>
<div data-controller="report" data-action="cable-ready:after-prepend@document->report#increment_counts">
	<h2 id="total-count" class="text-muted mb-1"><%= @transfers.count %> transfers during this range</h2>
	<ul class="list-inline h4 mb-3 text-muted">
		<li id="success-count" class="list-inline-item text-success"><%= @success_count %> Successful</li>
		<li id="fail-count" class="list-inline-item text-danger"><%= @fail_count %> Failures</li>
	</ul>
</div>
<%= render partial: "date_range", locals: {start_on: @start_on, end_on: @end_on, session_name: "atp_" } %>
<table class="table table-striped table-responsive table-overrides" data-controller="reports" data-reports-channel="TransfersChannel">
	<thead>
		<th>Transfer Status</th>
		<th>Updated At</th>
		<th>Family HBX Id</th>
		<th>Application HBX Id</th>
		<th>Ingestion Status</th>
		<th>Origin</th>
		<th></th>
	</thead>
	<tbody id="transfers-sent-table-body">
		<% @transfers.each do |transfer| %>
			<%= render partial: "transfer_row", locals: { transfer: transfer } %>
		<% end %>
	</tbody>
</table>

<%= paginate @transfers %>