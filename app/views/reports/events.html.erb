<h1>Event Log</h1>
<div data-controller="report" data-action="cable-ready:after-prepend@document->report#increment_event_log">
	<h2 id="total-count" class="text-muted mb-1"><%= @events_count %> events during this range</h2>
	<ul class="list-inline h4 mb-3 text-muted">
		<li id="transfers-count" class="list-inline-item">Transfers Out: <%= @transfers_total %></li>
		<li id="inbound-transfers-count" class="list-inline-item">Transfers In: <%= @inbound_transfers_total %></li>
		<li id="determinations-count" class="list-inline-item">Determinations: <%= @determinations_total %></li>
		<li id="mec-checks-count" class="list-inline-item">MEC Checks: <%= @mec_checks_total %></li>
	</ul>
</div>
<%= render partial: "date_range", locals: {start_on: @start_on, end_on: @end_on, session_name: ""} %>

<table class="table table-striped table-responsive table-overrides" data-controller="events">
	<thead>
		<th>Status</th>
		<th>Type</th>
		<th>Updated At</th>
		<th>Application Identifier</th>
	</thead>
	<tbody id="events-table-body">
		<% @events.each do |event| %>
			<%= render partial: "event_row", locals: { event: event } %>
		<% end %>
	</tbody>
</table>

<%= paginate @events %>