<h1>Events</h1>
<label for="start_on">Start On:</label>
<input type="date" id="start_on" name="start_on" value="<%= @start_on %>" data-reflex="input->Report#change_date" data-session="start">
<label for="end_on">End On:</label>
<input type="date" id="end_on" name="end_on" value="<%= @end_on %>" data-reflex="input->Report#change_date" data-session="end"></input>
<%= "as of #{Time.current.to_formatted_s(:time)} UTC" if @end_on.today? %>
<table class="table table-striped table-responsive"  style="table-layout:fixed; width:100%; word-wrap: break-word;">
	<thead>
		<th>Status</th>
		<th>Type</th>
		<th>Created At</th>
		<th>Application Identifier</th>
	</thead>
	<tbody>
		<% @events.each do |event| %>
			<tr>
				<td class="<%= event[:success] ? 'table-success' : 'table-danger' %>"><%= event[:success] ? "Success" : "Failure" %></td>
				<td><%= event[:type] %></td>
				<td><%= event[:created_at] %></td>
				<td><%= event[:app_id] %></td>
			</tr>
		<% end %>
	</tbody>
</table>