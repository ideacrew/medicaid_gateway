<div class="container p-0">
  <div class="row">
    <div class="col-8">
      <h1>Daily Determinations Report</h1>
    </div>    
  </div>
</div>

<% unless @app %>
  <h2 class="text-muted mb-3"><%= @count %> determinations on this day</h2>
  <div class="mt-2 mb-3" data-controller="report">
    <label for="daily_iap_date">Report Date:</label>
    <input type="date" id="daily_iap_date" name="daily_iap_date" value="<%= @daily_iap_date %>" data-action="report#change_date" data-session="daily_iap_date">            
</div>
<% end %>


<table class="table table-striped table-responsive mt-3 table-overrides" style="font-size:.7em">
	<thead>
		<tr>
			<th>Primary HBX ID</th>
			<th>Application Identifer</th>
			<th>Age</th>
            <th>UQHP</th>  
            <th>APTC/CSR</th>
            <th>Max APTC</th>     
            <th>CSR value</th>
			<th>Magi Medicaid</th>
            <th>Non Magi</th>
			<th>Is Totally Ineligible</th>
            <th>Submitted At</th>
            <th>Full Medicaid Applied?</th>
            <th>Blind</th>
            <th>Disabled</th>
            <th>Help With Daily Living</th>      			         
		</tr>
	</thead>
	<tbody>
		<% @applications.each do |application| %>
		  <% next unless application.application_response_entity %>
		  <% application.application_response_entity.tax_households.each do |household| %>
			<% household.tax_household_members.each do |member| %>
			  <% next unless member %>
			  <%= render partial: "daily_iap_determination_row", locals: { determination: application, entity: application.application_response_entity, applicant: member, tax_household: household } %>
			<% end %>
		  <% end %>
		<% end %>
	</tbody>
</table>

<%= paginate @applications %>